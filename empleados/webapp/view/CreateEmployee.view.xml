<mvc:View xmlns:core="sap.ui.core" 
			xmlns:mvc="sap.ui.core.mvc" 
			xmlns="sap.m" 
			controllerName="logaligroup.empleados.controller.CreateEmployee"
			xmlns:html="http://www.w3.org/1999/xhtml" 
			xmlns:form="sap.ui.layout.form" 
			xmlns:u="sap.ui.unified">
    <Page id="CE_Pa1" title="{i18n>crearEmpleado}">
		<content>
			<NavContainer id="wizardNavContainer">
				<pages>
					<Page id="CE_Pa2"	showHeader="false">
						<content>
							<Wizard id="wizard" complete="wizardCompletedHandler">
								<WizardStep id="typeEmployeeStep" title="{i18n>tipoEmpleado}"
											validated="false">
									<MessageStrip id="CE_MS1" class="sapUiSmallMarginBottom"
												text="{i18n>step1ms}"
												showIcon="true"/>
									<FlexBox id="CE_FB1" alignItems="Center" justifyContent="Center">
										<Button id="CE_Bu1" text="{i18n>interno}" press="toStep2" class="sapUiSmallMarginEnd">
											<customData>
												<core:CustomData key="typeEmployee" value="interno"></core:CustomData>
											</customData>
										</Button>
										<Button id="CE_Bu2" text="{i18n>autonomo}" press="toStep2" class="sapUiSmallMarginEnd">
											<customData>
												<core:CustomData key="typeEmployee" value="autonomo"></core:CustomData>
											</customData>
										</Button>
										<Button id="CE_Bu3" text="{i18n>gerente}" press="toStep2">
											<customData>
												<core:CustomData key="typeEmployee" value="gerente"></core:CustomData>
											</customData>
										</Button>
									</FlexBox>
								</WizardStep>
								<WizardStep id="dataEmployeeStep"
											validated="false"
											title="{i18n>datosEmpleado}">
									<MessageStrip id="CE_MS2" class="sapUiSmallMarginBottom"
												text="{i18n>step2ms}" showIcon="true"/>
									<form:SimpleForm id="CE_SF1"
													editable="true">
				                        <Label id="CE_La1" text="{i18n>nombre}" required="true"/>
										<Input id="inputNombre" valueState="{/_FirstNameState}" change="dataEmployeeValidation" value="{/FirstName}"/>
										<Label id="CE_La2" text="{i18n>apellidos}" required="true"/>
										<Input id="inputApellidos" valueState="{/_LastNameState}" change="dataEmployeeValidation" value="{/LastName}"/>
										<Label id="CE_La3" text="{= ${/_type} === 'autonomo' ? ${i18n>CIF} : ${i18n>DNI}}" required="true"/>
										<Input id="inputCIF" value="{/Dni}" valueState="{/_DniState}" change="validateDNI"></Input>
										<Label id="CE_La4" text="{= ${/_type} === 'autonomo' ? ${i18n>precioDiario} : ${i18n>salarioBrutoAnual}}"/>
										<VBox id="CE_VB1">
											<Slider id="CE_Sl1" value="{/_Salary}"
													min="12000" 
													max="80000"
													step="1000" inputsAsTooltips="true" showAdvancedTooltip="true" enableTickmarks="true"
													width="100%" progress="false" class="sapUiSmallMarginBottom" 
													visible="{=  ${/_type} === 'interno'}">
												<ResponsiveScale id="CE_RS1" tickmarksBetweenLabels="100"/>
											</Slider>
											<Slider id="CE_Sl2" value="{/_Salary}"
													min="100" 
													max="2000"
													step="100" inputsAsTooltips="true" showAdvancedTooltip="true" enableTickmarks="true"
													width="100%" progress="false" class="sapUiSmallMarginBottom"
													visible="{=  ${/_type} === 'autonomo'}">
												<ResponsiveScale id="CE_RS2" tickmarksBetweenLabels="100"/>
											</Slider>
											<Slider id="CE_Sl3" value="{/_Salary}"
													min="50000" 
													max="200000"
													step="1000" inputsAsTooltips="true" showAdvancedTooltip="true" enableTickmarks="true"
													width="100%" progress="false" class="sapUiSmallMarginBottom"
													visible="{=  ${/_type} === 'gerente'}">
												<ResponsiveScale id="CE_RS3" tickmarksBetweenLabels="100"/>
											</Slider>
										</VBox>
										<Label id="CE_La5" text="{i18n>fechaIncorporacion}" required="true"></Label>
										<DatePicker id="CE_DP1" dateValue="{/CreationDate}" valueState="{/_CreationDateState}" change="dataEmployeeValidation"></DatePicker>
									</form:SimpleForm>
								</WizardStep>
								<WizardStep id="OptionalInfoStep"
											validated="true"
											activate="optionalStepActivation"
											title="{i18n>infoAdicional}">
									<MessageStrip id="CE_MS3" class="sapUiSmallMarginBottom"
												text="{i18n>step3ms}"
												showIcon="true"/>
									<Label id="CE_La6" text="{i18n>comentario}" width="100%"></Label>
									<TextArea id="CE_TA1" value="{/Comments}" width="100%"></TextArea>
									<UploadCollection
											id="UploadCollection"
											maximumFilenameLength="55"
											maximumFileSize="10"
											multiple="true"
											uploadUrl="/sap/opu/odata/sap/ZEMPLOYEES_SRV/Attachments"
											sameFilenameAllowed="true"
											instantUpload="false"
											change="onChange"
											beforeUploadStarts="onBeforeUploadStart"
											noDataDescription="{i18n>arrastrarArchivos}" />

								</WizardStep>
							</Wizard>
						</content>
						<footer>
							<OverflowToolbar id="CE_OT1">
								<ToolbarSpacer id="CE_TS1"/>
								<Button id="CE_Bu4" text="{i18n>cancelar}" press="onCancel"/>
							</OverflowToolbar>
						</footer>
					</Page>
					<Page id="ReviewPage" title="{i18n>resumen}">
						<core:Fragment fragmentName="logaligroup.empleados.fragment.ReviewPage" type="XML"/>
						<footer>
							<Toolbar id="CE_To1">
								<ToolbarSpacer id="CE_TS2"></ToolbarSpacer>
								<Button id="CE_Bu5" text="{i18n>guardar}" press="onSaveEmployee"></Button>
								<Button id="CE_Bu6" text="{i18n>cancelar}" press="onCancel"></Button>
							</Toolbar>
						</footer>
					</Page>
				</pages>
			</NavContainer>
		</content>
	</Page>
</mvc:View>